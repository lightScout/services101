<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="16dp"
    android:layout_margin="8dp"
    android:elevation="4dp"
    >

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <ImageView
           android:background="@drawable/image_bg_selector"
           android:padding="8dp"
           android:id="@+id/music_cover_imageView"
           android:layout_width="95dp"
           android:layout_height="95dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toStartOf="@id/song_title_textView"
           android:layout_margin="16dp"
           tools:src="@tools:sample/backgrounds/scenic"
           android:scaleType="centerCrop"
           />


       <TextView
           android:id="@+id/song_title_textView"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_margin="16dp"
           android:gravity="center"
           android:textSize="18sp"
           android:textStyle="bold"
           app:layout_constraintBottom_toBottomOf="@+id/music_cover_imageView"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toEndOf="@id/music_cover_imageView"
           app:layout_constraintTop_toTopOf="@id/music_cover_imageView"
           tools:text="Gotta use my time" />





   </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>